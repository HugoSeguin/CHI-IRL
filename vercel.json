{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/add_event",
            "dest": "api/index.py"
        },
        {
            "src": "/",
            "dest": "api/index.py"
        }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/api/index" }
    ],
    "env": {
        "PYTHON_VERSION": "3.9",
        "FLASK_ENV": "production"
    },
    "regions": ["iad1"]
}
