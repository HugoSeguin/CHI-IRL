{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        { "src": "/add_event", "dest": "api/index.py" },
        { "src": "/", "dest": "api/index.py" },
        { "src": "/(.*)", "dest": "api/index.py" }
    ],
    "env": {
        "PYTHON_VERSION": "3.12",
        "FLASK_ENV": "production"
    },
    "regions": ["iad1"]
}
