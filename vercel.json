{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "250mb",
                "runtime": "python3.9",
                "installCommand": "pip install -r api/requirements.txt",
                "includeFiles": [
                    "api/requirements.txt",
                    "app.py",
                    "event_scraper.py", 
                    "google_calendar_sync.py"
                ]
            }
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "api/index.py" }
    ],
    "env": {
        "PYTHON_VERSION": "3.9",
        "FLASK_ENV": "production"
    },
    "regions": ["iad1"]
}
